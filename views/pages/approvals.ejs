<!doctype html>
<html>
    <%if (user.role === "admin") { %>
        <% include ../partials/sidebar %>
    <% } %>
<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<div class="container">
    <div class="row">
        <form enctype="multipart/form-data" action="/products/upload" method="post">
            <input id="sillybilly" name="sillybilly" type="file" />
            <button class='btn btn-success' type="submit">Upload</button>
        </form>
    </div>
    <div class="row">

        <!-- LOCAL INFORMATION -->
    <h3><span class="fa fa-user"></span> Orders List </h3>

        <table id="productlist">
            <thead>
                 <tr>
                    <th>Order Date</th>
                    <th>User</th>
                    <th>ETF</th>
                    <th>Create/Redeem</th>
                    <th>Quantity</th>
                    <th>Status</th>
                    <th>Edit Order</th>
                 </tr>
             </thead>
            <tbody>
                <% trans_list.forEach(function(trans) { %>
                <tr>
                    <td><%= trans.order_date %></td>
                    <td><%= trans.user %></td>
                    <td><%= trans.ric %></td>
                    <td><%= trans.create_or_redeem %></td>
                    <td><%= trans.quantity %></td>
                    <td><%= trans.status %></td>
                    <td><a href="/approvals/<%=trans._id%>"> 
                        <button type="submit" class="btn btn-warning btn-lg">Check Order Detail</button>
                    </a></td>
                </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</div>

<footer>
    <% include ../partials/footer %>
</footer>

</body>
<script>
    $(document).ready(function() {
    $   ('#productlist').DataTable();
    });
</script>
</html>