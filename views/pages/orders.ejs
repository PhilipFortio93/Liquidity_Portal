<!doctype html>
<html>

<head>
    <% include ../partials/head %>
</head>
<body>

<header>
    <% include ../partials/header %>
</header>

<div class="container">
    <div class="row">

        <!-- LOCAL INFORMATION -->
        <div class="col-sm-6">
            <div class="well">

                    <!-- show message when creating transaction -->
                <% if (message.length > 0) { %>
                    <div class="alert alert-danger"><%= message %></div>
                <% } %>

                <h3><span class="fa fa-user"></span> Place an order on <%= etf.name %></h3>

                    <p>
                        <strong>id</strong>: <%= etf._id %><br>
                        <strong>email</strong>: <%= etf.name %><br>
                        <strong>password</strong>: <%= etf.ric %>
                    </p>
                    <form action="/orders/<%=etf._id%>" method="post">
                        <div class="form-group">
                            <label>Creation or Redemption?</label>
                              <select name="CreateRedeem">
                                <option value="Create">Creation</option>
                                <option value="Redeem">Redemption</option>
                              </select>
                        </div>
                        <div class="form-group">
                            <label>Quantity</label>
                            <input type="number" class="form-control" name="quantity">
                        </div>
                        <div>
                            <label>Settlement Date </label>
                            <input type="date" name="bday">
                        </div>

                    <button type="submit" class="btn btn-warning btn-lg">Submit Order</button>
                    </form>

            </div>
        </div>

    </div>

</div>


<footer>
    <% include ../partials/footer %>
</footer>

</body>
</html>